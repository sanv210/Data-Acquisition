{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Element Information Schema",
  "description": "JSON schema for the Element Information page data",
  "type": "object",
  "required": ["analytical_group", "page", "ch_value", "elements"],
  "properties": {
    "analytical_group": {
      "type": "string",
      "description": "Selected analytical group name",
      "examples": ["LAS 2023", "SS 2023", "LA 2021"]
    },
    "page": {
      "type": "string",
      "const": "element_information",
      "description": "Page identifier"
    },
    "ch_value": {
      "type": "string",
      "description": "Channel value (typically '22', read-only in UI)",
      "pattern": "^[0-9]+$"
    },
    "elements": {
      "type": "array",
      "description": "Array of element configurations",
      "items": {
        "type": "object",
        "required": ["ele_name", "analytical_range_min", "analytical_range_max", "asterisk", "chemic_ele", "element"],
        "properties": {
          "ele_name": {
            "type": "string",
            "description": "Element name/symbol (e.g., Fe, C, Si)"
          },
          "analytical_range_min": {
            "type": "string",
            "description": "Minimum analytical range (numeric string with decimals)",
            "pattern": "^[0-9]*\\.?[0-9]+$"
          },
          "analytical_range_max": {
            "type": "string",
            "description": "Maximum analytical range (numeric string with decimals)",
            "pattern": "^[0-9]*\\.?[0-9]+$"
          },
          "asterisk": {
            "type": "string",
            "description": "Asterisk marker (typically '*' or empty)"
          },
          "chemic_ele": {
            "type": "string",
            "description": "Chemical element identifier"
          },
          "element": {
            "type": "string",
            "description": "Element display name"
          }
        }
      },
      "minItems": 0
    }
  }
}
